<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/product_toolbar"
            android:layout_width="match_parent"
            android:layout_height="280dp">

        <ImageView
                android:id="@+id/details_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop">
        </ImageView>

    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
            android:id="@+id/image_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:indeterminateTint="@color/blue"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_toolbar"
            android:orientation="vertical">

        <TextView
                android:id="@+id/product_name"
                style="@style/DetailsTextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"></TextView>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/product_priceFor_title"
                    style="@style/DetailsTextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Цена за"></TextView>

            <TextView
                    android:id="@+id/product_priceFor"
                    style="@style/DetailsTextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/product_priceFor_title"
                    android:text="П"></TextView>

            <TextView
                    android:id="@+id/product_price"
                    style="@style/DetailsTextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="10000"
                    android:textStyle="bold"></TextView>

        </RelativeLayout>


        <TextView
                android:id="@+id/product_desc_title"
                style="@style/DetailsTextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание"></TextView>

        <TextView
                android:id="@+id/product_desc"
                style="@style/DetailsTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Full Desc"></TextView>

    </LinearLayout>

    <Button
            android:id="@+id/buy_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:background="@color/purple"
            android:text="@string/buy_product"
            android:textColor="@color/white"
            android:textSize="16sp"></Button>

    <TextView
            android:id="@+id/empty_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/empty_product"
            android:visibility="gone"></TextView>

</RelativeLayout>