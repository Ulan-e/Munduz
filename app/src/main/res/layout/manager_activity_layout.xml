<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/manage_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/white"

            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:contentInsetEndWithActions="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetRight="0dp">
    </androidx.appcompat.widget.Toolbar>


    <Button
            android:id="@+id/add_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить товар"
            android:layout_margin="12dp"
            android:textSize="14sp"
            android:background="?android:selectableItemBackground"/>

    <Button
            android:id="@+id/manage_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Управление товарами"
            android:layout_margin="12dp"
            android:textSize="14sp"
            android:background="?android:selectableItemBackground"/>

    <Button
            android:id="@+id/order_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заказы товаров"
            android:layout_margin="12dp"
            android:textSize="14sp"
            android:background="?android:selectableItemBackground"/>

    <Button
            android:id="@+id/message_to_developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Написать разработчику"
            android:layout_margin="12dp"
            android:textSize="14sp"
            android:background="?android:selectableItemBackground"/>

</LinearLayout>