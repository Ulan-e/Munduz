<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:src="@mipmap/app_icon" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="62dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/dev_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="Разрабочик"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/dev_about_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dev_about"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="9dp"
                android:text="uulanerkinbaev@gmail.com"
                android:textStyle="bold"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/ver_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dev_about_bottom"
                android:layout_marginLeft="9dp"
                android:text="Версия"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/ver_about_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ver_about"
                android:layout_marginLeft="9dp"
                android:text="1.2"
                android:textStyle="bold"
                android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>