<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:orientation="vertical"
            android:background="@drawable/bottom_line"
            android:layout_margin="7dp">

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/app_icon" />

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/dev_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="Разрабочик"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/dev_about_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dev_about"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="9dp"
                android:text="Улан Эркинбаев"
                android:textSize="16sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/ver_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dev_about_bottom"
                android:layout_marginLeft="9dp"
                android:text="Версия"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/ver_about_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ver_about"
                android:layout_marginLeft="9dp"
                android:text="1.2"
                android:textSize="16sp"
                android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>