<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/handle_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:background="@color/colorPrimary"
            app:title="Добавить товар">
    </androidx.appcompat.widget.Toolbar>

    <!-- Category of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категория"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>
    <Spinner
            android:id="@+id/product_category"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>


    <!-- Name of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>


    <!-- Description of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:id="@+id/product_desc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>


    <!-- Cost of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Стоимость"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:id="@+id/product_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>


    <!-- Visibility of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Видимость"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="10dp"/>
    <RadioGroup
            android:id="@+id/product_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">
        <RadioButton
                android:id="@+id/product_visible"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:textSize="16sp"
                android:text="Да"
                android:checked="true"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"/>

        <RadioButton
                android:id="@+id/product_invisible"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:textSize="16sp"
                android:text="Нет"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"/>
    </RadioGroup>


    <!-- Image of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить картинку"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/choose_product_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_add_a_photo_gray_24dp"/>

        <ImageView
                android:id="@+id/product_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:src="@drawable/ic_add_a_photo_gray_24dp"/>
    </LinearLayout>

    <Button
            android:id="@+id/add_button_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить товар"
            android:textSize="14sp"
            android:layout_margin="8dp"/>


</LinearLayout>