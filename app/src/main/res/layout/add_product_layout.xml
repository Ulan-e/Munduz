<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/handle_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:background="@color/colorPrimary"
            app:title="@string/add_product"
            app:titleTextColor="@color/white">
    </androidx.appcompat.widget.Toolbar>

    <!-- Category of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>
    <Spinner
            android:id="@+id/product_category"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>


    <!-- Name of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLength="40"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>


    <!-- Description of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_desc"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:id="@+id/product_desc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="16sp"
            android:maxLength="250"
            android:maxLines="4"
            android:inputType="textMultiLine"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>


    <!-- Cost of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_cost"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:id="@+id/product_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>


    <!-- Visibility of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_visibility"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="10dp"/>
    <RadioGroup
            android:id="@+id/product_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">
        <RadioButton
                android:id="@+id/product_visible"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:textSize="16sp"
                android:text="@string/yes"
                android:checked="true"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"/>

        <RadioButton
                android:id="@+id/product_invisible"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:textSize="16sp"
                android:text="@string/no"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"/>
    </RadioGroup>


    <!-- Image of good -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_image"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/choose_product_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_add_a_photo_gray_24dp"
                android:layout_gravity="center_horizontal|center_vertical"/>

        <ImageView
                android:id="@+id/product_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:background="@color/white"/>
    </LinearLayout>


    <!--  Add Button -->
    <Button
            android:id="@+id/add_button_database"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/add_product"
            android:textSize="14sp"
            android:layout_margin="5dp"/>


</LinearLayout>